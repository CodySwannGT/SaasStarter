{
  "extends": "@saas-starter/tsconfig/node.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "sourceMap": false,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@saas-starter/config": ["../packages/config"]
    },
    "composite": true,
    "rootDir": "."
  },
  "include": [
    "lib/**/*",
    "bin/**/*",
    "test/**/*",
    "util/**/*"
  ],
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
